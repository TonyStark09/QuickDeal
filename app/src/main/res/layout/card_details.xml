<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEBEBE"
    android:elevation="0dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="140dp"
        android:background="@color/appcolor">
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:text="Title"
            android:textSize="20dp"
            android:id="@+id/title1"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_below="@id/title1"
            android:id="@+id/title2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Description"
            android:textColor="@color/appcolor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need unigue and royal fans from Usha. Made out of stainless with white glossy finishing. Contact with quote"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attached File"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:elevation="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#A9A9A9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/imageview"
                android:src="@drawable/gallery"/>
            <TextView
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:id="@+id/screenshort"
                android:textSize="18dp"
                android:text="Screenshort999.jpg"
                />
             <ImageView
                 android:layout_width="60dp"
                 android:layout_height="40dp"
                 android:src="@drawable/download"
                 android:layout_marginLeft="10dp"
                 android:onClick="onclick"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="70dp">
        </LinearLayout>


    </LinearLayout>

</LinearLayout>